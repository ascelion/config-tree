<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false" packagingData="true" scan="false" scanPeriod="2 seconds">
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} %-5level %-40logger{40} [%thread] %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="ascelion.config" level="INFO" />
	<logger name="ascelion.config.eclipse.References" level="ALL" />
	<logger name="ascelion.config.eclipse.ConfigImpl" level="ALL" />

	<root level="ERROR">
		<appender-ref ref="CONSOLE" />
	</root>
</configuration>
